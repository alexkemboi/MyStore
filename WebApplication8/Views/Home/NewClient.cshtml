
@{
    ViewBag.Title = "NewClient";
}
<div class="card">
    <div class="card-header">New Client</div>
    <div class="card-body">
        <div class="row">
            <div class="col-4">
                <label>Name</label>
            </div>
            <div class="col-8">
                <input type="text" name="name" />
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label>Email</label>
            </div>
            <div class="col-8">
                <input type="email" name="email" />
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label>Phone</label>
            </div>
            <div class="col-8">
                <input type="number" name="phoneNumber" />
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label>Address</label>
            </div>
            <div class="col-8">
                <input type="text" name="Address" />
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <button class="btn btn-primary">Submit</button>
            </div>
            <div class="col-6">
                <button class="btn btn-danger">Cancel</button>
            </div>
        </div>
    </div>
</div>



